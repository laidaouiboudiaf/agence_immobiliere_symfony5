{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <nav class=""></nav>
        <div class="jumbotron text-center  mt-4" style="color:orange;font-weight: bold; background-color: #f1f2f3 ">
            <nav class="nav nav-tabs mt-5" id="tab">
                <h5> Nos {{ numberAnnounces }} annonces Ã  la vente </h5>
            </nav>



        </div>
        <div class="row flex mt-5">
